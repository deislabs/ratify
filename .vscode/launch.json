  "version": "0.2.0",
  "configurations": [
    {
      "name": "Verify",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/ratify",
      "args": [
        "verify",
        "-s",
        "${input:subject}"
      ],
    },
    {
      "name": "Serve",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/ratify",
      "args": [
        "serve",
        "--http",
        ":6001"
      ],
    },
  ],
  "inputs": [
    {
      "id": "subject",
      "type": "promptString",
      "description": "Subject to verify",
      "default": "wabbitnetworks.azurecr.io/test/notary-image:signed"
    }
  ]
}
