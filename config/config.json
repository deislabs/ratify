{
    "stores": {
        "version": "1.0.0",
        "plugins": [
            {
                "name": "oras",
                "useHttp": true
            }
        ]
    },
    "policies": {
        "version": "1.0.0",
        "artifactVerificationPolicies": {
            "application/vnd.cncf.notary.v2": "any",
            "org.example.sbom.v0": "all"
        }
    },
    "verifiers": {
        "version": "1.0.0",
        "plugins": [
            {
                "name":"notaryv2",
                "artifactTypes" : "org.cncf.notary.v2",
                "verificationCerts": [
                    "<cert folder>"
                  ]
            },
            {
                "name":"sbom",
                "artifactTypes":"org.example.sbom.v0",
                "nestedReferences": "org.cncf.notary.v2"
            }
            
        ]
        
    }
}